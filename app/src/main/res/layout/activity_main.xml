<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"

    android:touchscreenBlocksFocus="false"
    android:nestedScrollingEnabled="false"
    android:background="@drawable/basic"
    android:longClickable="true"
    android:clickable="false">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Výučba"
        android:id="@+id/btnVyucba"
        android:layout_marginBottom="164dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:visibility="visible"
        android:textColor="#ffffffff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kvíz- hlavné mestá "
        android:id="@+id/btnKviz"
        android:layout_marginTop="49dp"
        android:layout_alignTop="@+id/btnVyucba"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/btnVyucba"
        android:layout_alignEnd="@+id/btnVyucba"
        android:visibility="visible"
        android:textColor="#ffffffff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pexeso"
        android:id="@+id/btnPexeso"
        android:layout_below="@+id/btnKviz"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/btnKviz"
        android:layout_alignEnd="@+id/btnKviz"
        android:visibility="visible"
        android:textColor="#ffffffff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Koniec"
        android:id="@+id/btnKoniec"
        android:layout_below="@+id/btnPexeso"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:clickable="false"
        android:visibility="visible"
        android:textColor="#ffffffff" />


<TextView android:text="" android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:id="@+id/textView" />

</RelativeLayout>


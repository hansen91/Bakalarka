<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pozadie">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prehľad štátov"
        android:id="@+id/btnPrehlad"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="140dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Kontinent"
        android:id="@+id/textKont"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/btnPrehlad"
        android:layout_toStartOf="@+id/btnPrehlad"
        android:layout_marginTop="34dp" />

</RelativeLayout>